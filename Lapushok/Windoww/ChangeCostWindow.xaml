<Window x:Class="Lapushok.Windoww.ChangeCostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lapushok.Windoww"
        mc:Ignorable="d"
        Title="Окно изменения стоимости" Height="350" MaxHeight="350" MinHeight="350"
        Width="550" MaxWidth="550" MinWidth="550"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Style="{StaticResource TextBoxText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="SearchTbx"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Grid.RowSpan="2"
            Width="320"
            Height="50"
            />


        <TextBlock Style="{StaticResource TextBlockText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="SearchTbl"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Grid.RowSpan="2"
            Width="320"
            Height="50"
            MouseDown="SearchTbl_MouseDown"
            />


        <Button Content="Изменить цену"
            Style="{StaticResource ButtonBoxText}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Name="AddBtn"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Grid.RowSpan="2"
            Width="250"
            Height="40" Click="AddBtn_Click"
            >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
