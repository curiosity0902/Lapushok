<Window x:Class="Lapushok.Windoww.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lapushok.Windoww"
        mc:Ignorable="d"
        Title="AddProductWindow" MaxHeight="650" MinHeight="650" 
        MaxWidth="1000" MinWidth="1000"
        Height="650" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Добавление продукта"
            Style="{StaticResource TextBlockText}"
            FontSize="44"
            FontWeight="DemiBold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Grid.RowSpan="1"
            />
        
        <TextBlock Text="Артикул"
            Style="{StaticResource TextBlockText}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.RowSpan="1"
            />
        
        <TextBox Style="{StaticResource TextBoxText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="ArticulTbx"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="1"
            Width="270"
            Height="50"
            />
        <TextBlock Text="Название"
            Style="{StaticResource TextBlockText}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.RowSpan="1"
            />

        <TextBox Style="{StaticResource TextBoxText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="NameTbx"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="1"
            Width="270"
            Height="50"
            />
        <TextBlock Text="Тип"
            Style="{StaticResource TextBlockText}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.RowSpan="1"
            />
        <ComboBox Style="{StaticResource ComboBoxText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="TypeCbx"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="1"
            Width="270"
            Height="50"
            >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Style="{StaticResource TextBlockText}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Добавить материал"
            Style="{StaticResource TextBlockText}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Grid.RowSpan="1"
            />
        
        <Image 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Name="Photo"
            Grid.Row="1"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Grid.RowSpan="1"
            Width="150"
            Height="150" 
            />

        <ComboBox Style="{StaticResource ComboBoxText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="MaterialCbx"
            Grid.Row="3"
            Grid.Column="4"
            Grid.ColumnSpan="2"
            Grid.RowSpan="1"
            Width="270"
            Height="50" SelectionChanged="MaterialCbx_SelectionChanged"
            >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Style="{StaticResource TextBlockText}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Количество человек"
            Style="{StaticResource TextBlockText}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.RowSpan="1"
            />

        <TextBox Style="{StaticResource TextBoxText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="CountPeopleTbx"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="1"
            Width="270"
            Height="50"
            />
        <TextBlock Text="Номер цеха"
            Style="{StaticResource TextBlockText}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.RowSpan="1"
            />

        <TextBox Style="{StaticResource TextBoxText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="NumberShopTbx"
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="1"
            Width="270"
            Height="50"
            />

        <TextBlock Text="Минимальная цена"
            Style="{StaticResource TextBlockText}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.RowSpan="1"
            />

        <TextBox Style="{StaticResource TextBoxText}"
            HorizontalAlignment="Center"
            Padding="10"
            VerticalAlignment="Center"
            x:Name="MinCostTbx"
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="1"
            Width="270"
            Height="50"
            />

        <ListView
            x:Name="MaterialsLv"
            Grid.Row="4"
            Grid.Column="3"
            Grid.ColumnSpan="3"
            Grid.RowSpan="3"
            Width="440"
            Height="230"
            >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название материала" Width="440" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn>
                        <DataTemplate>
                            <Button>
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="15"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </DataTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
